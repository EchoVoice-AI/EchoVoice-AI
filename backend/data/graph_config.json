{
    "version": "1.0",
    "metadata": {
        "generatedBy": "graph.py",
        "description": "Configuration for graph visualization and processing",
        "createdAt": "2025-11-25T00:00:00Z"
    },
    "graph": {
        "directed": true,
        "multigraph": false,
        "allowSelfLoops": false,
        "maxNodes": 10000
    },
    "nodeDefaults": {
        "shape": "circle",
        "size": 24,
        "minSize": 8,
        "maxSize": 96,
        "color": "#3B82F6",
        "borderColor": "#1E293B",
        "borderWidth": 1,
        "labelField": "label",
        "tooltipFields": ["id", "label", "type"]
    },
    "edgeDefaults": {
        "color": "#94A3B8",
        "width": 2,
        "arrow": {
            "enabled": true,
            "size": 8
        },
        "directed": true,
        "curved": false,
        "labelField": "weight"
    },
    "layout": {
        "type": "force", 
        "options": {
            "gravity": 0.1,
            "distance": 120,
            "repulsionStrength": 800,
            "maxIterations": 1000,
            "stabilize": true
        },
        "fallback": {
            "type": "grid",
            "options": {
                "cols": 10,
                "rowSpacing": 100,
                "colSpacing": 100
            }
        }
    },
    "render": {
        "mode": "canvas",
        "antialias": true,
        "pixelRatio": "device",
        "animate": true,
        "animationDurationMs": 400
    },
    "physics": {
        "enabled": true,
        "timeStep": 0.02,
        "damping": 0.9
    },
    "interaction": {
        "zoom": {
            "enabled": true,
            "min": 0.1,
            "max": 4
        },
        "pan": true,
        "select": {
            "mode": "single",
            "multiKey": "Shift"
        },
        "hover": {
            "enabled": true,
            "highlightNeighbors": true
        }
    },
    "analytics": {
        "computeMetricsOnLoad": ["degree", "connectedComponents"],
        "enableStreamingUpdates": false,
        "metricsCacheTTLSeconds": 3600
    },
    "data": {
        "sourceType": "file",
        "file": {
            "path": "./data/graph_data.json",
            "format": "json",
            "watchForChanges": false
        },
        "batchSize": 1000
    },
    "persistence": {
        "enable": true,
        "backend": "sqlite",
        "connection": {
            "file": "./data/graph_store.db"
        },
        "autosaveIntervalSeconds": 60
    },
    "security": {
        "sanitizeLabels": true,
        "maxLabelLength": 512
    },
    "extensions": {
        "clustering": {
            "enabled": true,
            "algorithm": "louvain",
            "resolution": 1.0
        },
        "pathfinding": {
            "enabled": true,
            "defaultAlgorithm": "dijkstra"
        }
    }
}